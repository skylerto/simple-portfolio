<%= form_for @portfolio do |f| %>
<% if @portfolio.errors.any? %>
  <h2><%= pluralize(@portfolio.errors.count, "error")%> prevented this post from saving</h2>
  <ul>
    <% @portfolio.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

  <p>
    <%= f.label :image, class: 'col-sm-2 control-label'  %>
    <%= f.file_field :image %>
  </p>

  <p>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :created %>
    <%= f.date_field :created %>
  </p>

  <p>
    <%= f.label :description%>
