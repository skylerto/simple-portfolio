<%= form_for @piece do |f| %>
<% if @piece.errors.any? %>
  <h2><%= pluralize(@piece.errors.count, "error")%> prevented this post from saving</h2>
  <ul>
    <% @piece.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

  <p>
    <% if !@piece.image.url.nil? %>
      <p>Current Image</p>
      <%= image_tag(@piece.image.url(:full)) %>
    <% end %>
  </p>

  <p>
    <%= f.label :image, 'New Image'  %>
    <%= f.file_field :image %>
  </p>

  <p>
    <%= f.label :title %>
    <br/>
    <%= f.text_field :title %>
  </p>
<p>
  <%= f.label :portfolio_id %>
  <%= f.select(:portfolio_id, @portfolios.map {|p|
    name_and_factor = "#{p.title}"
    [name_and_factor, p.id]}) %>
</p>


  <p>
    <%= f.label :created %>
    <%= f.date_field :created %>
  </p>

  <p>
    <%= f.label :description%>
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.submit %>
  </p>

<% end %>
